{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx","*.vue"],
      "options": {
        "overrides": [
          {
            "files": "*.?(js|jsx|ts|tsx|vue)",
            "options": {
              "semi": false,
              "singleQuote": true,
              "jsxSingleQuote": true,
              "spaceBeforeFunctionParen": true,
              "proseWrap": "never",
              "arrowParens": "always"
            }
          }
        ]
      }
    }
  ]
}